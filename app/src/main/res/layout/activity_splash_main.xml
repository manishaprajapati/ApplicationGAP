<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FileSharingProject.SplashScreen.SplashMainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/images1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d3f2ecea"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:src="@drawable/canvas_trans" />

            <Button
                android:id="@+id/angry_btn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#F85E58"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                android:paddingLeft="60dp"
                android:paddingRight="40dp"
                android:drawableLeft="@drawable/googleicon"
                android:text="Sign in"
                android:textColor="#F85E58"
                android:textSize="20sp"
                android:textStyle="bold|normal" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>